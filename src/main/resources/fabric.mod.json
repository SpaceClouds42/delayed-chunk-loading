{
  "schemaVersion": 1,
  "id": "delayed-chunk-loading",
  "version": "${version}",
  "name": "Delayed Chunk Loading",
  "description": "Delays initial chunk loading to reduce lag when players join",
  "authors": [
    "SpaceClouds42",
    "ItsVen"
  ],
  "license": "LGPL-3.0",

  "environment": "server",
  "entrypoints": {
    "main": [
      {
        "value": "us.spaceclouds42.delayed.chunks.Common::INSTANCE"
      }
    ]
  },
  "mixins": [
    "delayed-chunks.mixins.json"
  ],

  "depends": {
    "fabricloader": ">=0.11.6",
    "fabric-language-kotlin": ">=1.6.0+kotlin.1.5.0",
    "minecraft": ">=1.17"
  }
}